generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CommandAudit {
  id           Int      @id @default(autoincrement())
  command      String
  slackChannel String
  slackUser    String
  createdAt    DateTime @default(now())
}

model DeploymentAudit {
  id                Int      @id @default(autoincrement())
  environment       String
  slackChannel      String
  slackUser         String
  version           String
  hash              String
  status            String
  statusDescription String?
  createdAt         DateTime @default(now())
}

// status: Success, Failed, In progress
